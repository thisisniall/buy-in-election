<div class="transaction">
	<%= form_for @transaction do |t| %>
		<%= t.hidden_field :user_id, :value => @user.id %>
		<%= t.label :candidate_id %>
		<%= t.collection_select :candidate_id, @candidates, :id, :name, :prompt => "Select a Candidate" %>
		
		<br>
		<br>
		<%= t.select :buysell, {"Buy" => 0, "Sell" => 1}, {:prompt => "Select a type of transaction"}, {:class => "user_input" }%>
		<br>
		<br>
		<%= t.hidden_field :shares_clinton, :value => nil %>
		<%= t.hidden_field :shares_sanders, :value => nil %>
		<%= t.hidden_field :shares_dem_rof, :value => nil %>
		<%= t.hidden_field :shares_carson, :value => nil %>
		<%= t.hidden_field :shares_cruz, :value => nil %>
		<%= t.hidden_field :shares_rubio, :value => nil %>
		<%= t.hidden_field :shares_trump, :value => nil %>
		<%= t.hidden_field :shares_rep_rof, :value => nil %>

		<!-- value 1 is hillary -->
		<% if :candidate_id.value = 1 %>
			<%= t.number_field:shares_clinton 
		<% end %>
		<br>
		<br>
		<%= t.submit :class => "button user_input"%>
	<% end %>
</div>

