<div id="page">
	<div id="candidate_page">
		<% if @candidate.party == 0 %>
			<div id="dem_candidate">
				<h1 class="skinny"><%= @candidate.name %></h1>
				<% if @candidate.name == 'Hillary Clinton' %>
					<img src="/assets/clinton.jpg" class="candidate_img" />
					<%= render partial: 'transactions/clinton', locals: {user: @user, transaction: @transaction} %>
				<% elsif @candidate.name == 'Bernie Sanders' %>
					<img src="/assets/sanders.jpg" class="candidate_img" />
					<%= render partial: 'transactions/sanders', locals: {user: @user, transaction: @transaction} %>
				<% else %>
					<img src="/assets/democraticlogo.png" class="candidate_img" />
					<%= render partial: 'transactions/dem_rof', locals: {user: @user, transaction: @transaction} %>
				<% end %>
				<p><span class="bold">Ticker name:</span> <%= @dem[@candidate.id - 1]['Symbol'] %></p>
				<p><span class="bold">Low:</span> <%= @dem[@candidate.id - 1]['Low'] %></p>
				<p><span class="bold">High:</span> <%= @dem[@candidate.id - 1]['High'] %></p>
				<p><span class="bold">Current Price:</span> <%= @dem[@candidate.id - 1]['Average'] %></p>
				<p><span class="bold">Total Shares:</span> <%= @candidate.total_shares %></p>
			</div>
		<% else %>
			<div id="rep_candidate">
				<h1 class="skinny"><%= @candidate.name %></h1>
				<% if @candidate.name == "Ben Carson" %>
					<img src="/assets/carson.jpg" class="candidate_img" />
					<%= render partial: 'transactions/carson', locals: {user: @user, transaction: @transaction} %>
				<% elsif @candidate.name == 'Ted Cruz' %>
					<img src="/assets/cruz.jpg" class="candidate_img" />
					<%= render partial: 'transactions/cruz', locals: {user: @user, transaction: @transaction} %>
				<% elsif @candidate.name == 'Marco Rubio' %>
					<img src="/assets/rubio.jpg" class="candidate_img" />
					<%= render partial: 'transactions/rubio', locals: {user: @user, transaction: @transaction} %>
				<% elsif @candidate.name == 'Donald Trump' %>
					<img src="/assets/trump.jpg" class="candidate_img" />
					<%= render partial: 'transactions/trump', locals: {user: @user, transaction: @transaction} %>
				<% else %>
					<img src="/assets/republicanlogo.jpg" class="candidate_img" />
					<%= render partial:  'transactions/rep_rof', locals: {user: @user, transaction: @transaction} %>
				<% end %>
				<p><span class="bold">Ticker name:</span> <%= @rep[@candidate.id - 4]["Symbol"] %></p>
				<p><span class="bold">Low:</span> <%= @rep[@candidate.id - 4]['Low'] %></p>
				<p><span class="bold">High:</span> <%= @rep[@candidate.id - 4]['High'] %></p>
				<p><span class="bold">Current Price:</span> <%= @rep[@candidate.id - 4]['Average'] %></p>
				<p><span class="bold">Total Shares:</span> <%= @candidate.total_shares %></p>
			</div>
		<% end %>
	</div>
</div>
